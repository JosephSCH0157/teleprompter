{
  "name": "teleprompter",
  "type": "module",
  "version": "1.6.1",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "dev": "npx live-server --port=8080 --no-browser --watch=.",
    "smoke": "node ./tools/smoke_test.js",
    "types": "tsc -p jsconfig.json --noEmit",
    "check": "npm run lint && npm run types",
    "prepare": "husky"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.3.0",
    "typescript": "^5.6.0"
  },
  "optionalDependencies": {
    "playwright": "^1.40.0",
    "puppeteer": "^20.0.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}

{
  "name": "teleprompter",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "types": "tsc -p jsconfig.json --noEmit",
    "check": "npm run lint && npm run types",
    "prepare": "husky"
  },
  "devDependencies": {
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.3.0",
    "typescript": "^5.6.0"
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "**/*.{html,css}": [
      "prettier --write"
    ],
    "ignore": [
      "node_modules/**",
      "releases/**"
    ]
  }
}
